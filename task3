CSS (style.css)

This CSS uses media queries to change the layout on smaller screens.

CSS

/* Base styles for all screen sizes (Mobile-first) */
body {
    font-family: sans-serif;
    margin: 0;
    padding: 20px;
    line-height: 1.6;
}

header h1 {
    text-align: center;
}

.carousel-container {
    position: relative;
    max-width: 600px;
    margin: 0 auto 40px;
    overflow: hidden;
}

.carousel-slide {
    display: none; /* Hide all slides by default */
}

.carousel-slide img {
    width: 100%;
    display: block;
}

#prevBtn, #nextBtn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    padding: 10px;
    cursor: pointer;
}

#prevBtn {
    left: 10px;
}

#nextBtn {
    right: 10px;
}

.api-data {
    text-align: center;
    border: 1px solid #ccc;
    padding: 20px;
    border-radius: 8px;
}

/* Media Query for tablets and larger screens */
@media (min-width: 768px) {
    body {
        padding: 40px;
    }

    header h1 {
        font-size: 2.5em;
    }
}
JavaScript (script.js)

This script manages the carousel and fetches data from the Random User API.

JavaScript

// Interactive Image Carousel
let slideIndex = 0;
const slides = document.querySelectorAll('.carousel-slide');
const prevBtn = document.getElementById('prevBtn');
const nextBtn = document.getElementById('nextBtn');

function showSlide(index) {
    slides.forEach(slide => slide.style.display = 'none');
    slides[index].style.display = 'block';
}

function nextSlide() {
    slideIndex = (slideIndex + 1) % slides.length;
    showSlide(slideIndex);
}

function prevSlide() {
    slideIndex = (slideIndex - 1 + slides.length) % slides.length;
    showSlide(slideIndex);
}

prevBtn.addEventListener('click', prevSlide);
nextBtn.addEventListener('click', nextSlide);

// Initialize the carousel
showSlide(slideIndex);

// Fetching Data from an API
const userInfo = document.getElementById('user-info');

async function fetchUserData() {
    try {
        const response = await fetch('https://randomuser.me/api/');
        const data = await response.json();
        const user = data.results[0];

        userInfo.innerHTML = `
            <p><strong>Name:</strong> ${user.name.first} ${user.name.last}</p>
            <p><strong>Email:</strong> ${user.email}</p>
            <p><strong>Location:</strong> ${user.location.city}, ${user.location.country}</p>
        `;
    } catch (error) {
        userInfo.innerHTML = `<p>Failed to fetch user data.</p>`;
        console.error('Error fetching data:', error);
    }
}

// Call the function when the page loads
fetchUserData();
